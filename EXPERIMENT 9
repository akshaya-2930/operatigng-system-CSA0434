#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>

int main() {
    key_t key = 1234;
    int shmid;
    char *data;

    shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    data = (char*) shmat(shmid, (void*)0, 0);

    printf("Enter message: ");
    fgets(data, 100, stdin);

    printf("Data written in memory: %s", data);

    shmdt(data);

    return 0;
}
